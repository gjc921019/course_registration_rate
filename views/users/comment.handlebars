<section>
    <h2>Comments about {{courseName}}</h2>
    {{#if hasComment}}
    <ul>
        {{#each comments}}
            <li>
                <dl>
                    <dt>Poster</dt>
                    <dd>{{this.poster}}</dd>
                    <dt>Content</dt>
                    <dd>{{this.comment}}</dd>
                    <dt>Rate</dt>
                    <dd>{{this.rate}}</dd>
                </dl>
            </li>
        {{/each}}
    </ul>
    {{else}}
    <p>Sorry, but there is no comment about {{courseName}}</p>
    {{/if}}
</section>