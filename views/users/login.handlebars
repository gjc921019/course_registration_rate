<nav>
        <div class="circleBehind">
            <a href="/aboutus">ABOUT-US</a>
        </div>

</nav>

<br>

<h1>Welcome to Register&Rate!</h1>
<br>
<div class="container" id="container">
    <div class="form-container sign-up-container">
        <form action="/">
            <h1>Hurry Up!</h1>
            <h2>Register your favourite courses.</h2>
            <img class="home" src="https://media3.giphy.com/media/3o6Zt6ivHPMYy1HJQY/source.gif" alt="Did you register?">
        </form>
    </div>

    <div class="form-container sign-in-container">
        <form class="Myform" id="login-form" method="POST" action="/login">
            <h1>Login</h1>
            <br>
            <label for="username">Username</label>
            <input name="username" id="username" type="text" placeholder="Username" required oninvalid="this.setCustomValidity('Username cannot be empty.')" onchange="this.setCustomValidity('')"/>
            <label for="password">Password</label>
            <input name="password" id="password" type="password" placeholder="Password" required oninvalid="this.setCustomValidity('Username cannot be empty.')" 
                            onchange="this.setCustomValidity('')"/>
            <button>Sign In</button>
        </form>
    </div>

    <div class="overlay-container">
        <div class="overlay">
            <div class="overlay-panel overlay-left">
                <h1>Welcome Back!</h1>
                <p>To keep connected with us please login with your personal info</p>
                <button class="ghost" id="signIn">Sign In</button>
            </div>
            <div class="overlay-panel overlay-right">
                <h1>Hello, there!</h1>
                <div class="outer">
                    <div class="inner"></div>
                    <div class="inner"></div>
                </div>
                <p>Someone's waiting for you</p>
                <button class="ghost" id="clickMe">Click Me!</button>
            </div>
        </div>
    </div>
</div>

<div>
    {{#unless status}}
    <p class="msg">{{message}}</p>
    {{/unless}}
</div>

<script>
const clickMeButton = document.getElementById('clickMe');
const signInButton = document.getElementById('signIn');
const container = document.getElementById('container');

clickMeButton.addEventListener('click', () => {
    container.classList.add("right-panel-active");
});

signInButton.addEventListener('click', () => {
    container.classList.remove("right-panel-active");
});
</script>          